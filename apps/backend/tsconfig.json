{
    "extends": "tsconfig/backend.json",
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "node_modules",
        ".turbo",
        "coverage",
        "dist",
        "src/**/*.test.ts"
    ]
}
