{
    "name": "@company/backend",
    "version": "1.0.0",
    "description": "backend",
    "author": "Nikola Milovic",
    "license": "GPL",
    "main": "src/server.ts",
    "scripts": {
        "clean-build": "rm -rf dist && yarn build",
        "build-ts": "tsc && tsc-alias",
        "build": "yarn build-ts && cp -r ./src/docs ./dist  && cp -r ./src/data ./dist ",
        "build-nolint": "yarn build-ts",
        "debug": "yarn build && yarn run watch-debug",
        "dev": "yarn watch-debug",
        "format": "prettier -w .",
        "format:check": "prettier -c .",
        "lint:fix": "eslint src --fix && yarn format",
        "lint": "eslint src --fix && yarn format",
        "lint:strict": "eslint --max-warnings=0 src",
        "prepare-husky": "husky install",
        "serve-debug": "NODE_ENV=development nodemon ./dist/src/server.js",
        "serve": "node dist/server.js",
        "start": "yarn serve",
        "test": "NODE_ENV=test jest --runInBand",
        "watch-debug": "NODE_ENV=development concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"yarn watch-ts\" \"yarn run serve-debug\"",
        "watch-node": "nodemon dist/server.js",
        "watch-test": "yarn test -- --watchAll",
        "watch-ts": "tsc -w  & tsc-alias -w",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-sass\" \"yarn run watch-ts\" \"npm run watch-node\""
    },
